@page
@model TesteMazzaFC.Pages.AtualizaProdutoModel
@{
    ViewData["Title"] = "Atualiza Produtos";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label >Titulo</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="">
                    <label>Categoria</label>
                    <select class="form-select" asp-for="Categoria" asp-items="Model.Categorias"></select> 
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Preço</label>
                    <input asp-for="Preco" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-default">Atualiza Produto</button>
                </div>

            </form>
        </section>
    </div>

</div>
