@page
@model TesteMazzaFC.Pages.CriaProdutoModel
@{
    ViewData["Title"] = "Insere Produtos";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label >Titulo</label>
                    <input asp-for="txtTitulo" class="form-control" />
                    <span asp-validation-for="txtTitulo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Categoria</label>
                    <select class="form-select" asp-for="selecionado" asp-items="Model.Categorias"></select> 
                    <span asp-validation-for="txtPreco" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Preço</label>
                    <input asp-for="txtPreco" class="form-control" />
                    <span asp-validation-for="txtPreco" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-default">Criar Produto</button>
                </div>

            </form>
        </section>
    </div>

</div>
