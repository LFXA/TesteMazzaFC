@page
@model TesteMazzaFC.Pages.Shared.ProdutosModel
@{
    ViewData["Title"] = "Produtos";
}

<h2>@ViewData["Title"]</h2>

<p><a asp-page="/CriaProduto">Criar um novo</a></p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Categoria
            </th>
            <th>
                Preço
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.produtos)
        {
            <tr>
                <td> @item.Nome</td>

                <td> @item.Categoria</td>


                <td> @item.Preco</td>
                <td>
                    <a  asp-page-handler="Atualiza" asp-route-id="@item.Id" asp-route-categoria="@item.Categoria" asp-route-nome="@item.Nome" asp-route-preco="@item.Preco">Atualizar</a>
                    <a asp-page-handler="Delete" asp-route-prodId="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>